public class dowhilesoal2 {
    public static java.util.Scanner
    scanner = new java.util.Scanner(System.in);
    public static void main(String[] args) {
    Integer mount =  input("Input bilangan");
        int i = 1;
        int total_nilai = 0;
        System.out.print("Bilangan yang kurang dari "+ mount +" adalah");        
        do {
            if (i % 2 != 0) {
                System.out.print(" "+i);
                total_nilai = total_nilai + i;
            }
            i++;
        } while (i <= mount);       
        System.out.println();
        System.out.print("Jumlah seluruh bilangan adalah : " + total_nilai); 
    }
public static Integer input(String info) {
        System.out.print(info + " : ");
        Integer data = scanner.nextInt();
        return data;
    }
}
